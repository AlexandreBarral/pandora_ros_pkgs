<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find pandora_control)/config/pandora_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="laser_controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" args="laser_roll_joint_position_controller
						  laser_pitch_joint_position_controller"/>
  
  <node name="stabilizer_control_node" pkg="pandora_control" type="stabilizer_control_node" 
		respawn="false" output="screen" />

  
</launch>
